{
    "openapi": "3.0.3",
    "info": {
        "title": "Заявки",
        "version": "1.0.0"
    },
    "paths": {
        "/requests/default/index": {
            "get": {
                "tags": [
                    "Requests"
                ],
                "summary": "Requests: Список записей",
                "description": "Список записей",
                "parameters": [
                    {
                        "$ref": "oas.json#/components/parameters/page"
                    },
                    {
                        "$ref": "oas.json#/components/parameters/per-page"
                    },
                    {
                        "$ref": "oas.json#/components/parameters/filter"
                    },
                    {
                        "$ref": "#/components/parameters/expand"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/request"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "oas.json#/components/responses/error"
                    }
                }
            }
        },
        "/requests/default/create": {
            "post": {
                "tags": [
                    "Requests"
                ],
                "summary": "Requests: Создание записи",
                "description": "Создание записи",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Имя",
                                        "example": "Александр"
                                    },
                                    "email": {
                                        "type": "string",
                                        "description": "Email",
                                        "example": "test@test.ru"
                                    },
                                    "message": {
                                        "type": "string",
                                        "description": "Сообщение",
                                        "example": "Сообщение"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/request"
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "oas.json#/components/responses/error"
                    }
                }
            }
        },
        "/requests/default/update": {
            "patch": {
                "tags": [
                    "Requests"
                ],
                "summary": "Requests: Редактирование записи",
                "description": "Редактирование записи",
                "parameters": [
                    {
                        "$ref": "oas.json#/components/parameters/id"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "comment": {
                                        "type": "string",
                                        "description": "Комментарий",
                                        "example": "Комментарий"
                                    },
                                    "status": {
                                        "type": "integer",
                                        "description": "Статус",
                                        "example": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/request"
                                }
                            }
                        }
                    },
                    "default": {
                        "$ref": "oas.json#/components/responses/error"
                    }
                }
            }
        },
        "/requests/default/delete": {
            "delete": {
                "tags": [
                    "Requests"
                ],
                "summary": "Requests: Удаление записи",
                "description": "Удаление записи",
                "parameters": [
                    {
                        "$ref": "oas.json#/components/parameters/id"
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "oas.json#/components/responses/200"
                    },
                    "default": {
                        "$ref": "oas.json#/components/responses/error"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "expand": {
                "in": "query",
                "name": "expand",
                "schema": {
                    "type": "string"
                },
                "example": "moderatorRelation",
                "description": "moderatorRelation - Модератор"
            }
        },
        "schemas": {
            "updateAttributes": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "description": "Статус",
                        "example": "new"
                    }
                }
            },
            "request": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "oas.json#/components/schemas/uuid"
                    },
                    "name": {
                        "type": "string",
                        "description": "Имя",
                        "example": "Александр"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email",
                        "example": "test@test.ru"
                    },
                    "message": {
                        "type": "string",
                        "description": "Сообщение",
                        "example": "Сообщение"
                    },
                    "comment": {
                        "type": "string",
                        "description": "Комментарий",
                        "example": "Комментарий"
                    },
                    "status": {
                        "type": "integer",
                        "description": "Статус",
                        "example": 1
                    },
                    "idModerator": {
                        "$ref": "oas.json#/components/schemas/uuid"
                    },
                    "createdAt": {
                        "type": "string",
                        "description": "Время создания",
                        "example": "18.08.2025 20:00:00"
                    },
                    "updatedAt": {
                        "type": "string",
                        "description": "Время обновления",
                        "example": "18.08.2025 20:00:00"
                    }
                }
            }
        }
    }
}
